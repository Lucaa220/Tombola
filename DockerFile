# Usa un'immagine base Python
FROM python:3.9-slim

# Installa i pacchetti di sistema necessari
RUN apt-get update && apt-get install -y \
    build-essential \
    libssl-dev \
    libffi-dev \
    python3-dev && \
    rm -rf /var/lib/apt/lists/*

# Crea l'ambiente virtuale
RUN python -m venv /opt/venv

# Imposta il PATH in modo che usi l'ambiente virtuale
ENV PATH="/opt/venv/bin:$PATH"

# Aggiorna pip
RUN pip install --upgrade pip

# Imposta la directory di lavoro e copia il file dei requisiti
WORKDIR /app
COPY requirements.txt .

# Installa le dipendenze
RUN pip install -r requirements.txt

# Copia tutto il resto del codice
COPY . .

# Comando per avviare il bot (modifica "main.py" se il file principale ha un altro nome)
CMD ["python", "main.py"]
